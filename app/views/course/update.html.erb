<h1>
    <%= $q_exp.title %>
</h1>
<p>
    <%= $q_exp.explanation %>
</p>
<p>
    <%= simple_format($q.q_text) %>
</p>
<ol>
    <%= form_tag(controller: "course", action: "update")  do %>
        <% (1..5).each do |n| %>
            <% if eval("$choices.choice_#{n}") then %>
                <li>
                    <%= radio_button_tag(:num, n) %>
                    <%= label_tag("num_#{n}", eval("$choices.choice_#{n}")) %>    
                </li>
            <% end %>
        <% end %>
        <%= submit_tag("次へ") %>
    <% end %>
</ol>
