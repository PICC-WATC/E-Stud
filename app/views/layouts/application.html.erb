<!DOCTYPE html>
<html>
  <head>
    <title>EStud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="container">
      <nav class="navbar navbar-expand-sm navbar-light ">
        <%= link_to "E-Stud", root_path, class: "navbar-brand" %>
        
        <% if logged_in? %>
          <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div id="menu" class="collapse navbar-collapse">
            <ul class="navbar-nav">
              <li class="nav-item"><%= link_to "Account", choose_course_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Profile", current_user, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Settings", edit_user_path(current_user), class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Log out", logout_path, method: :delete, class: "nav-link" %></li>
              <% if current_user.admin? && current_user?(current_user), class: "nav-link" %>
                <li class="nav-item"><%= link_to "Settings", edit_user_path(current_user), class: "nav-link" %></li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <div class="login">
            <ul>
              <li><%= link_to "Log in", login_path, class: "nav-link" %></li>
            </ul>
          </div>
        <% end %>
      </nav>
    </div>
  </header>

  <body>
    <div class="top-wrapper">
      <% flash.each do |message_type, message| %>
        <div><%= message %></div>
      <% end %>
    <%= yield %>
    </div>
  </body>

  <footer>
    <nav>
      <ul>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
      </ul>
    </nav>
  </footer>
</html>
